{
 "manifest_version": 2,
 "name": "Facebook Blocker",
 "description": "Blocks Facebook but not messenger",
 "version": "0.0.0.1",
 "author": "Jackson Yuan",

 "icons": {
   "16": "icons/icon16x16.png",
   "48": "icons/icon48x48.png",
   "128": "icons/icon128x128.png"
 },

 "browser_action": {
    "default_icon": "icons/icon16x16.png",   
    "default_title": "Facebook Blocker"
 },

 "background": {
   "scripts": ["background.js"],
   "persistent": true
 },

 "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
 ]
}